{
  "root": "client",
  "entrypoint": "index.html",
  "extraDependencies": [
    "node_modules/@webcomponents/webcomponentsjs/**"
  ],
  "moduleResolution": "node",
  "npm": true,
  "sources": [
    "logo.png",
	"favicon.ico",
    "package.json"
  ],

  "builds": [
    {
      "preset": "es5-bundled",
      "name": "es5",
      "bundle": false,
      "addServiceWorker": false,
      "insertPrefetchLinks": true,
      "js": {
        "minify": false,
        "compile": "es5",
        "transformModulesToAmd": true
      }
    },
    {
      "addServiceWorker": false,
      "name": "default",
      "js": {
        "minify": false,
        "compile": false
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": false,
      "addPushManifest": false
    }
  ]
}
